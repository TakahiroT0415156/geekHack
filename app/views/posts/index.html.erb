        </div>
      </div>
      <div class="description">
        <h1><%= t.title %></h1>
        <div class="text">
        <a href="#0" class=""><%= link_to "詳細へ", post_path(t.id) %></a>
        </div>
      </div>
    </div>
  <% end %>


